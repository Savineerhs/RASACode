{
  "name": "rasacode",
  "displayName": "RASACode",
  "description": "An extension for making RASA chatbot development easier.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.rasacode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rasacode.helloWorld",
        "title": "Hello World"
      }
    ], 
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rasacode",
          "title": "RASACode",
          "icon": "media/rasa.png"
        }
      ]
    }, 
    "views": {
      "rasacode": [
        {
          "id": "rasacode-domain-tree",
          "name": "Domain"
        }, 
        {
          "id": "rasacode-trainingData-tree",
          "name": "Training Data"
        }, 
        {
          "id": "rasacode-toolbox",
          "name": "Toolbox"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rasacode-domain-tree",
        "contents": "RASACode not initialized in current directory.", 
        "when": "workbenchState == workspace || workbenchState == folder"
      }, 
      {
        "view": "rasacode-domain-tree",
        "contents": "Open a folder to detect an existing RASA project, or initialize a new one.", 
        "when": "workbenchState == empty"
      }, 
      {
        "view": "rasacode-trainingData-tree",
        "contents": "RASACode not initialized in current directory.", 
        "when": "workbenchState == workspace || workbenchState == folder"
      }, 
      {
        "view": "rasacode-trainingData-tree",
        "contents": "Open a folder to detect an existing RASA project, or initialize a new one.", 
        "when": "workbenchState == empty"
      }, 
      {
        "view": "rasacode-toolbox",
        "contents": "\n[Initialize RASACode](command:rasacode.init)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "yaml": "^2.2.1"
  }
}
